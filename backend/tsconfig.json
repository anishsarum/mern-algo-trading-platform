{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.ts", "routes/**/*.ts", "models/**/*.ts", "middleware/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
